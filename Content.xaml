<UserControl x:Class="MyApp.Content"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp"
             mc:Ignorable="d" Background="#F0F2F5"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Trains}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200" Height="200" Background="#F0F2F5" 
                                BorderBrush="Black" 
                                BorderThickness="2" 
                                CornerRadius="15" 
                                Margin="10" 
                                Cursor="Hand"
                                MouseLeftButtonUp="TrainCard_Click">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Date}" 
                                           FontSize="22" 
                                           FontWeight="Bold" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,10,0,5"
                                           Foreground="#333"/>
                                
                                <TextBlock  Grid.Row="1" Text="{Binding Type}" 
                                            FontSize="16" 
                                            Foreground="Black" 
                                            HorizontalAlignment="Left" 
                                            Margin="5,0,0,0"
                                            />
                                
                                <TextBlock Grid.Row="2" Text="{Binding Emoji}" 
                                           FontSize="60" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" />
                                
                                <Grid Grid.Row="3">
                                    <Button Content="&#xE70F;" 
                                            Click="EditTrain_Click"
                                            HorizontalAlignment="Left" 
                                            Cursor="Hand" 
                                            BorderThickness="0" 
                                            Background="Transparent"
                                            Foreground="#4A90E2"
                                            Margin="5"
                                            FontSize="20"
                                            FontFamily="Segoe MDL2 Assets">
                                        
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Click="DeleteTrain_Click"
                                            Content="&#xE74D;" 
                                            HorizontalAlignment="Right" 
                                            Cursor="Hand" 
                                            BorderThickness="0" 
                                            Background="Transparent"
                                            Foreground="#FF5252"
                                            Margin="5"
                                            FontSize="20"
                                            FontFamily="Segoe MDL2 Assets">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>

        <!--EDIT TRAIN POPUP-->
        
        <Popup x:Name="EditTrainPopup" 
               Placement="Center"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Width="220"
                    Background="White" 
                    BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="15">
                <StackPanel>
                    <TextBlock Text="Edit"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="New Data"
                               Foreground="Gray" 
                               Margin="0,0,0,5"/>

                    <DatePicker x:Name="EditDatePicker"
                                Margin="0,0,0,10"/>

                    <TextBlock Text="New type"
                               Foreground="Gray" 
                               Margin="0,0,0,5"/>

                    <ComboBox x:Name="EditTypeComboBox"
                              Margin="0,0,0,15">
                        <ComboBoxItem Content="Chest workout"/>
                        <ComboBoxItem Content="Back workout"/>
                        <ComboBoxItem Content="Leg workout"/>
                        <ComboBoxItem Content="Arm workout"/>
                        <ComboBoxItem Content="Shoulder workout"/>
                        <ComboBoxItem Content="Cardio workout"/>
                    </ComboBox>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Content="Cancel"
                                Click="CancelEdit_Click"
                                Background="#E0E0E0"
                                Foreground="#333333"
                                BorderThickness="0"
                                Height="30"
                                Margin="0,0,5,0"
                                Cursor="Hand"/>

                        <Button Grid.Column="1"
                            Content="💾 Save"
                            Click="SaveEdit_Click"
                            Background="#4A90E2"
                            Foreground="White"
                            BorderThickness="0"
                            Height="30"
                            Cursor="Hand"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Popup>
        
    </Grid>
    
</UserControl>
