<UserControl x:Class="MyApp.Content"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Trains}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="10"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="200" Height="200" Background="White" 
                                BorderBrush="Black" BorderThickness="1" 
                                CornerRadius="2" Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Date}" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
                                <TextBlock  Grid.Row="1" Text="{Binding Type}" FontSize="16" Foreground="Black" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                                <TextBlock Grid.Row="2" Text="{Binding Emoji}" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <Grid Grid.Row="3">
                                    <Button Content="✏️ Edit" HorizontalAlignment="Left" Cursor="Hand" Height="30" Width="70" BorderThickness="0" Background="SandyBrown" Margin="3">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="🗑️ Delete" HorizontalAlignment="Right" Cursor="Hand" Height="30" Width="70" BorderThickness="0" Background="Tomato" Margin="3">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="3"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
    
</UserControl>
