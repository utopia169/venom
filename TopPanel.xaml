<UserControl x:Class="MyApp.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp"
             mc:Ignorable="d" 
             Height="70" d:DesignWidth="800" Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">

                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="File" Cursor="Hand"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="File" Cursor="Hand"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="File" Cursor="Hand"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="File" Cursor="Hand"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal">

                <Button Name="UserBtn" Click="UserBtn_Click" Content="👤" Height="25" Margin="3" Width="24" FontSize="15" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Popup Name="LoginPopup" PlacementTarget="{Binding ElementName=UserBtn}" Placement="Bottom" StaysOpen="False">
                    <Border Background="White" Padding="10">
                        <StackPanel Width="200" Height="100">
                            <TextBox Text="Login"  Margin="5"/>
                            <PasswordBox  Margin="5"/>
                            <Button Content="Sign in"  Margin="5"/>
                        </StackPanel>
                    </Border>
                </Popup>

                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="Roll up" Cursor="Hand"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="Screen" Cursor="Hand"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="Exit" Cursor="Hand"/>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Add Train" Name="AddTrainBtn" Height="30" Width="75" Margin="2" Background="LightGreen" Click="AddTrainClick">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Popup Name="CreateTrainPopup" PlacementTarget="{Binding ElementName=AddTrainBtn}" Placement="Bottom" StaysOpen="False">
                <Border Background="Gray" CornerRadius="5">
                    <StackPanel Width="200">
                        <TextBlock Text="Enter train name" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                        <TextBox x:Name="TrainNameTextBox" Width="180" Height="25" Margin="0,0,0,10" />
                        <Button Content="Add" Width="100" Height="25" Click="ConfirmAddTrain_Click"/>
                    </StackPanel>
                </Border>
            </Popup>
            <Button Content="Delete Train" Height="30" Width="75" Margin="2" Background="LightSalmon">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
