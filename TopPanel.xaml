<UserControl x:Class="MyApp.TopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyApp"
             mc:Ignorable="d" 
             Height="35" d:DesignWidth="800" Background="#F0F2F5">
    <Grid MouseLeftButtonDown="TopPanel_MouseLeftButtonDown" Background="#F0F2F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">

                <!--MAIN BTN-->
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE80F;" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Main" 
                                   VerticalAlignment="Center" 
                                   FontSize="12"/>
                    </StackPanel>
                </Button>

                <!--LIBRARY BTN-->
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8A1;"
                                   FontFamily="Segoe MDL2 Assets"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="Library"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!--ADD TRAIN BTN-->

                <Button Name="AddTrainBtn" 
                        Margin="5,0"
                        Cursor="Hand"
                        Background="Transparent" 
                        Click="AddTrainClick"
                        BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        
                        <TextBlock Text="&#xE710;"
                                   FontFamily="Segoe MDL2 Assets"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"
                                   FontWeight="Bold"/>
                        
                        <TextBlock Text="Add Train"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Popup Name="CreateTrainPopup" PlacementTarget="{Binding ElementName=AddTrainBtn}" Placement="Bottom" StaysOpen="False">
                    <Border Background="White" BorderBrush="Gray" BorderThickness="3" CornerRadius="1">
                        <StackPanel Width="220">
                            <TextBlock Text="Training data" Margin="0,0,0,4" HorizontalAlignment="Center"/>
                            <DatePicker x:Name="TrainDataPicker" Margin="0,0,0,15"/>

                            <TextBlock Text="Training type" Margin="0,0,0,5"/>
                            <ComboBox x:Name="TrainigTypeComboBox">
                                <ComboBoxItem Content="Chest workout" IsSelected="True"/>
                                <ComboBoxItem Content="Back workout"/>
                                <ComboBoxItem Content="Leg workout"/>
                                <ComboBoxItem Content="Arm workout"/>
                                <ComboBoxItem Content="Shoulder workout"/>
                                <ComboBoxItem Content="Cardio workout"/>
                            </ComboBox>
                            <Button Content="Add card" Width="100" Height="25" Click="ConfirmAddTrain_Click" Margin="0,0,0,3"/>
                        </StackPanel>
                    </Border>
                </Popup>
                
                <!--Filters-->

                <Button Name="FilterBtn"
                        Background="Transparent"
                        Cursor="Hand"
                        Margin="5,0"
                        BorderThickness="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE71C;"
                                   FontFamily="Segoe MDL2 Assets"
                                   Margin="0,0,5,0"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"/>
                        
                        <TextBlock Text="Filter"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!--OPEN/CLOSE-->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="&#xE921;" 
                        Cursor="Hand"
                        Click="RollUp_Click"
                        FontFamily="Segoe MDL2 Assets"/>
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="&#xE922;" 
                        Cursor="Hand"
                        Click="Screen_Click" 
                        FontFamily="Segoe MDL2 Assets"
                        />
                <Button Width="40" Height="25" Margin="3" BorderBrush="Black" Content="&#xE8BB;" 
                        Cursor="Hand"
                        Click="Exit_Click"
                        FontFamily="Segoe MDL2 Assets"
                        />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
